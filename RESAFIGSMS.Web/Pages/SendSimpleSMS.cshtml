@page
@model RESAFIGSMS.Web.Pages.SendSimpleSMSModel
@{
}
<form method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	
		<div class="form-group">
			<label asp-for="SMSSimpleModels.phoneNumber" class="control-label"></label>
			<input type="tel" asp-for="SMSSimpleModels.phoneNumber" class="form-control"/>
			<span asp-validation-for="SMSSimpleModels.phoneNumber" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="SMSSimpleModels.senderName" class="control-label"></label>
			<input type="tel" asp-for="SMSSimpleModels.senderName" class="form-control" disabled value="RESAFIG" />
			<span asp-validation-for="SMSSimpleModels.senderName" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="SMSSimpleModels.message" class="control-label"></label>
		<textarea asp-for="SMSSimpleModels.message" style="height:100px" class="form-control"></textarea>
		<span asp-validation-for="SMSSimpleModels.message" class="text-danger"></span>
		</div>
		<div class="form-group">
		<br /><button type="submit" class="btn btn-primary" style="width:150px;">Envoyer SMS</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Annuler</a>
		</div>
		
	
</form>

@if (ViewData["Msg"] != null)
{
	<script type="text/javascript">
		window.onload = function () {
			alert("@ViewData["Msg"]");
		}
	</script>
}